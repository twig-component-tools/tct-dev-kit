      <h2>Some DOM parsing character tests</h2>
      <p><strong>The next two lines MUST be readable Umlauts and special chars:</strong></p>
      <p>Ä ä Ö ö Ü ü ß é &</p>
      <p>&Auml; &auml; &Ouml; &ouml; &Uuml; &uuml; &szlig; &eacute; &amp;</p>
    {% endblock %}

    {% block main %}
      <p><strong>The button above MUST correctly display the parents theme.</strong></p>
      <p><strong>The button below MUST display 'undefined' instead.</strong></p>
      {% embed '@components/Atom/AButton/AButton.twig' with { props: { type: 'button' } } %}
        {% block default %}

        Parent's props:
        <code>theme: {{ props.theme|default('undefined') }}</code>
      {% endembed %}
    {% endblock %}

    {% block footer %}
      <p><strong>This MUST be an image of a bird holding a stick (twig tools, get it?)</strong></p>
      <img
        src="{{ 'tct' ~ '-' ~ 'logo' ~
        (false ? '.png' : '.jpeg') }}"
        alt=""
      >
    {% endblock %}
  {% endembed %}

  {% embed '@components/Organism/OSection/OSection.twig' with { props: {  } } %}
    {% block header %}
      <h2>Nested Sections</h2>
    {% endblock %}

    {% block main %}
      {% embed '@components/Organism/OSection/OSection.twig' with { props: { theme: 'dark' } } %}
        {% block header %}
          <h3>Level 1</h3>
        {% endblock %}

        {% block main %}
          <p>This section is nested within another section.</p>
          <p>{{ deeplyNestedTest }}</p>

          {% embed '@components/Organism/OSection/OSection.twig' with { props: { theme: 'red' } } %}
            {% block header %}
              <h4>Level 2</h4>
            {% endblock %}

            {% block main %}
              <p>This section is nested within another section.</p>
              <p>{{ deeplyNestedTest }}</p>

              {% embed '@components/Organism/OSection/OSection.twig' with { props: { theme: 'blue' } } %}
                {% block header %}
                  <h5>Level 3</h5>
                {% endblock %}

                {% block main %}
                  <p>This section is nested within another section.</p>
                  <p>{{ deeplyNestedTest }}</p>
                {% endblock %}
              {% endembed %}
            {% endblock %}
          {% endembed %}
        {% endblock %}
      {% endembed %}
    {% endblock %}
  {% endembed %}
