{% set deeplyNestedTest = 'This text comes from high above.' %}

{% block page %}
  {% embed '@components/Organism/OSection/OSection.twig' with { props: {  } } %}
    {% block header %}
      <h1>Welcme to the TCT Dev Kit</h1>

      <div
        class="test-div"
        {% if contentEditable %}contenteditable="true"{% endif %}
      >
        This is editable
      </div>
    {% endblock %}

    {# <ANotFound sadbvaks/> #}

    {#
    {% include '@components/Organism/OThisDoesNotExist/OThisDoesNotExist.twig' with { props: {  } } %}
    #}

    {% block main %}
      Something outside of {% if true %} shit {% endif %}
