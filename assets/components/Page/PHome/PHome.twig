{% extends '@components/Template/TBase/TBase.twig' %}

{% set variable = 'YES' %}

{% set deeplyNestedTest = 'This text comes from high above.' %}

{% block page %}
  <OSection>
    <block name="header">
      <h1>Welcme to the TCT Dev Kit</h1>
    </block>

    {# <ANotFound sadbvaks/> #}

    {#
      <OThisDoesNotExist/>
    #}

    <block name="main">
      Something outside of {% if true %} shit {% endif %}
      <p>This project contains an up to date symfony installation with a git submodule to develop the TCT Bundle.</p>
      <MSearchForm has-button/>
    </block>

    <block name="footer">
      <a href="https://github.com/twig-component-tools">GitHub</a>
    </block>
  </OSection>

  <OSection theme="dark">
    <block name="header">
      <h2>Some DOM parsing character tests</h2>
      <p><strong>The next two lines MUST be readable Umlauts and special chars:</strong></p>
      <p>Ä ä Ö ö Ü ü ß é &</p>
      <p>&Auml; &auml; &Ouml; &ouml; &Uuml; &uuml; &szlig; &eacute; &amp;</p>
    </block>

    <block name="main">
      <p><strong>The button above MUST correctly display the parents theme.</strong></p>
      <p><strong>The button below MUST display 'undefined' instead.</strong></p>
      <AButton type="button">
        Parent's props:
        <code>theme: {{ props.theme|default('undefined') }}</code>
      </AButton>
    </block>

    <block name="footer">
      <p><strong>This MUST be an image of a bird holding a stick (twig tools, get it?)</strong></p>
      <img
        src="{{ 'tct' ~ '-' ~ 'logo' ~
        (false ? '.png' : '.jpeg') }}"
        alt=""
      >
    </block>
  </OSection>

  <OSection>
    <block name="header">
      <h2>Nested Sections</h2>
    </block>

    <block name="main">
      <OSection theme="dark">
        <block name="header">
          <h3>Level 1</h3>
        </block>

        <block name="main">
          <p>This section is nested within another section.</p>
          <p>{{ deeplyNestedTest }}</p>

          <OSection theme="red">
            <block name="header">
              <h4>Level 2</h4>
            </block>

            <block name="main">
              <p>This section is nested within another section.</p>
              <p>{{ deeplyNestedTest }}</p>

              <OSection theme="blue">
                <block name="header">
                  <h5>Level 3</h5>
                </block>

                <block name="main">
                  <p>This section is nested within another section.</p>
                  <p>{{ deeplyNestedTest }}</p>
                </block>
              </OSection>
            </block>
          </OSection>
        </block>
      </OSection>
    </block>
  </OSection>
{% endblock page %}
